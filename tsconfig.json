{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "knexfile.ts"]
}
